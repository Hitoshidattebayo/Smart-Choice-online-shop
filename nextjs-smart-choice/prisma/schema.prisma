datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Order {
  id               String   @id @default(uuid())
  customerName     String
  phoneNumber      String
  email            String?
  productId        String
  productName      String
  amount           Float
  status           String   @default("PENDING_PAYMENT") // PENDING_PAYMENT, PAID, CANCELLED
  paymentReference String   @unique
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

// Optional: If we want to store products in DB later
model Product {
  id          String   @id
  name        String
  price       Float
  description String
  createdAt   DateTime @default(now())
}
