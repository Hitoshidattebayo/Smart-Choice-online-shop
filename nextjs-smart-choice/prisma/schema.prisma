datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

generator client {
  provider = "prisma-client-js"
}

model Order {
  id               String   @id @default(uuid())
  customerName     String
  phoneNumber      String
  email            String?
  productId        String
  productName      String
  amount           Float
  status           String   @default("PENDING_PAYMENT") // PENDING_PAYMENT, PAID, CANCELLED
  paymentReference String   @unique
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String   // Hashed password
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Optional: If we want to store products in DB later
model Product {
  id          String   @id
  name        String
  price       Float
  description String
  createdAt   DateTime @default(now())
}
