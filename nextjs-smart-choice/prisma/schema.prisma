datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

generator client {
  provider = "prisma-client-js"
}

model Order {
  id               String      @id @default(uuid())
  customerName     String
  phoneNumber      String
  email            String?
  address          String? // Added address field
  totalAmount      Float
  status           String      @default("PENDING_PAYMENT") // PENDING_PAYMENT, PAID, CANCELLED
  paymentReference String      @unique
  userId           String?
  user             User?       @relation(fields: [userId], references: [id])
  items            OrderItem[]
  deletedAt        DateTime?   // For Trash Bin functionality
  createdAt        DateTime    @default(now())
  updatedAt        DateTime    @updatedAt
}

model OrderItem {
  id          String   @id @default(uuid())
  orderId     String
  order       Order    @relation(fields: [orderId], references: [id])
  productId   String
  productName String
  quantity    Int
  price       Float
  image       String?
}

model User {
  id          String   @id @default(uuid())
  name        String
  email       String?  @unique
  password    String?  // Hashed password
  isGuest     Boolean  @default(false)
  guestNumber String?  @unique // "A1b2" format
  orders      Order[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Optional: If we want to store products in DB later
model Product {
  id          String   @id
  name        String
  price       Float
  description String
  createdAt   DateTime @default(now())
}
