# Database Configuration
# This is the connection string for your Prisma/SQLite database
DATABASE_URL="file:./prisma/dev.db"

# NextAuth.js Configuration (if you plan to use NextAuth for authentication)
# NEXTAUTH_URL="http://localhost:3000"
# NEXTAUTH_SECRET="your-secret-key-here-generate-a-random-string"

# Payment Gateway Configuration (add when ready to integrate payments)
# STRIPE_SECRET_KEY="your-stripe-secret-key"
# STRIPE_PUBLISHABLE_KEY="your-stripe-publishable-key"

# Email Service Configuration (for order notifications)
# Using Gmail SMTP for sending email notifications
EMAIL_SERVER_HOST="smtp.gmail.com"
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER="your-gmail@gmail.com"
EMAIL_SERVER_PASSWORD="your-gmail-app-password"
EMAIL_FROM="Smart Choice <noreply@smartchoice.mn>"

# Admin Email - receives notifications when orders are placed
ADMIN_EMAIL="admin@example.com"

# Google OAuth Configuration
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Application Settings
NODE_ENV="development"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Admin Credentials (for basic auth - change these!)
# ADMIN_USERNAME="admin"
# ADMIN_PASSWORD="change-this-password"

# NextAuth Configuration
NEXTAUTH_SECRET="your-super-secret-key-change-this-in-production-use-openssl-rand-base64-32"
NEXTAUTH_URL="http://localhost:3000"
