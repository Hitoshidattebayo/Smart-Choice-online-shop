# Production Environment Variables for Vercel
# Copy and paste this into Vercel Dashboard → Settings → Environment Variables → "Import .env"

# Database URL - REQUIRED
# Replace with your actual database connection string
# Options: Vercel Postgres, Supabase, PlanetScale, Railway
DATABASE_URL="postgresql://username:password@host:5432/database_name?schema=public"

# Application URL - REQUIRED
# Replace with your actual Vercel deployment URL
NEXT_PUBLIC_APP_URL="https://smart-choice-online-shop.vercel.app"

# Node Environment - REQUIRED
NODE_ENV="production"

# Payment Integration - Stripe (Optional - add when ready)
# Get these from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY="sk_live_your_stripe_secret_key_here"
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_live_your_stripe_publishable_key_here"

# Email Service - SMTP (Optional - for order confirmations)
EMAIL_SERVER_HOST="smtp.gmail.com"
EMAIL_SERVER_PORT="587"
EMAIL_SERVER_USER="your-email@gmail.com"
EMAIL_SERVER_PASSWORD="your-app-specific-password"
EMAIL_FROM="noreply@smartchoice.mn"

# Authentication - NextAuth.js (Optional)
# Generate secret with: openssl rand -base64 32
NEXTAUTH_SECRET="generate-a-random-secret-string-here"
NEXTAUTH_URL="https://smart-choice-online-shop.vercel.app"

# Admin Credentials (Optional - for admin panel)
ADMIN_USERNAME="admin"
ADMIN_PASSWORD="change-this-to-a-secure-password"
